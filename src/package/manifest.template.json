{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.6/MicrosoftTeams.schema.json",
    "manifestVersion": "1.6",
    "id": "${NEXT_PRIVATE_APPLICATION_ID}",
    "version": "${NEXT_PUBLIC_VERSION}",
    "packageName": "zeplin-for-teams",
    "developer": {
        "name": "Zeplin",
        "websiteUrl": "https://zeplin.io",
        "privacyUrl": "https://zeplin.io/privacy",
        "termsOfUseUrl": "https://zeplin.io/terms"
    },
    "name": {
        "short": "Zeplin",
        "full": "Zeplin"
    },
    "description": {
        "short": "Receive updates from your Zeplin workspace in real time",
        "full": "Zeplin is a connected workspace for product teams where you can share, organize and collaborate on designs. It's a living source of truth where your projects and design system live hand in hand, integrated with the tools you use everyday."
    },
    "icons": {
        "outline": "icon-outline.png",
        "color": "icon-color.png"
    },
    "accentColor": "#D85028",
    "configurableTabs": [],
    "staticTabs": [],
    "bots": [],
    "connectors": [
        {
            "connectorId": "${NEXT_PRIVATE_CONNECTOR_ID}",
            "configurationUrl": "${NEXT_PRIVATE_BASE_URL}/?theme={theme}&channel={channelName}",
            "scopes": [
                "team"
            ]
        }
    ],
    "composeExtensions": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "${NEXT_PRIVATE_DOMAIN}"
    ],
    "showLoadingIndicator": true
}
