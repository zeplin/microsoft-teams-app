{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.12/MicrosoftTeams.schema.json",
    "manifestVersion": "1.12",
    "id": "${NEXT_PRIVATE_APPLICATION_ID}",
    "version": "${NEXT_PUBLIC_VERSION}",
    "packageName": "zeplin",
    "developer": {
        "name": "Zeplin",
        "websiteUrl": "https://zeplin.io",
        "privacyUrl": "https://zeplin.io/privacy",
        "termsOfUseUrl": "https://zeplin.io/terms"
    },
    "name": {
        "short": "Zeplin",
        "full": "Zeplin"
    },
    "description": {
        "short": "TEST --- Get updates from your Zeplin workspace",
        "full": "TEST --- Zeplin is an organized workspace where you can publish designs from design tools and the entire team can collaborate to ship beautiful products. With the Zeplin for Microsoft Teams app, you can connect Zeplin projects to channels and get notifications about design changes and conversations."
    },
    "icons": {
        "outline": "icon-outline.png",
        "color": "icon-color.png"
    },
    "accentColor": "#FFFFFF",
    "configurableTabs": [],
    "staticTabs": [],
    "bots": [],
    "connectors": [
        {
            "connectorId": "${NEXT_PRIVATE_CONNECTOR_ID}",
            "configurationUrl": "${NEXT_PRIVATE_BASE_URL}/?theme={theme}&channel=General&group={groupId}&locale={locale}&entity={entityId}",
            "scopes": [
                "team"
            ]
        }
    ],
    "composeExtensions": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "${NEXT_PRIVATE_DOMAIN}"
    ],
    "showLoadingIndicator": true
}
